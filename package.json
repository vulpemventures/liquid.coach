{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "watch": "tsdx watch -i ./src/index.tsx",
    "build": "tsdx build -i ./src/index.tsx",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "scss": "npx node-sass --output-style compressed -o public/css public/scss",
    "serve": "npx parcel --no-cache --port 8080 public/index.html",
    "bundle": "yarn scss && yarn build && npx parcel build --no-cache public/index.html --public-url /liquid.coach",
    "deploy": "npx push-dir --dir=dist --branch=gh-pages"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "liquid.coach",
  "author": "Vulpem Ventures",
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not op_mob > 1"
  ],
  "module": "dist/liquid.coach.esm.js",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "bip32": "^2.0.5",
    "bip39": "^3.0.2",
    "bulma": "^0.8.2",
    "bulma-switch": "^2.0.0",
    "copy-lite": "^0.1.2",
    "cpx": "^1.5.0",
    "husky": "^4.2.5",
    "liquidjs-lib": "provable-things/liquidjs-lib",
    "parcel-bundler": "^1.12.4",
    "push-dir": "^0.4.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hook-form": "^5.4.0",
    "sass": "^1.26.3",
    "tsdx": "^0.13.1",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3",
    "use-global-storage": "^0.1.0"
  },
  "dependencies": {}
}
